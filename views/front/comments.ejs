<div class="comment">
    <% if(!userInfo) { %>
    <div class="ct-login-tip">
        <span>登录后可以进行评论！</span>
    </div>
    <% } else { %>
        <div class="ct-title">
            <span>评论</span>
            <span>一共有<i><%= content.comments.length %></i>条评论</span>
        </div>
        <div class="ct-user"><%= userInfo.username %></div>
        <div class="ct-input">
            <!-- 内容ID还是用户ID -->
            <input type="hidden" id="js-content-id" value="<%= content._id %>">
            <textarea id="js-comment-con" class="ct-input-con" name="" id="" cols="30" rows="10"></textarea>
            <span id="js-comment-btn" class="ct-input-btn">提交</span>
        </div>
        <% if(content.comments.length === 0) { %>
            <div class="ct-none">
                <span>还没有评论</span>
            </div>
        <% } else { %>
        <ul id="js-comments-list" class="ct-list">
            <% content.comments.forEach(item => { %>
            <li>
                <div class="avatar">
                    <img src="/public/upload/<%= item.user.avatar %>"/>
                </div>
                <div class="cl-info">
                    <div class="cl-info-title">
                        <span class="cl-info-username"><%= item.user.username %></span>
                        <span class="cl-info-date"><%= new Date(item.commentTime).toLocaleString() %></span>
                    </div>
                    <div class="cl-info-con">
                        <span><%= item.content %></span>
                    </div>
                </div>
            </li>
            <% }); %>
        </ul>
        <% } %>
    <% } %>
</div>