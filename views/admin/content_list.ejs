<ol class="breadcrumb">
    <li><a href="/admin">后台</a></li>
    <li class="active">内容列表</li>
</ol>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>分类名</th>
            <th>标题</th>
            <th>作者</th>
            <th>添加时间</th>
            <th>阅读量</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% contents.forEach((item, idx) => { %>
        <tr>
            <th scope="row"><%= (pageNow - 1) * limit + idx %></th>
            <td><%= item._id %></td>
            <td><%= item.classify.name %></td>
            <td><%= item.title %></td>
            <td><%= item.user.username %></td>
            <td><%= item.addTime %></td>
            <td><%= item.views %></td>
            <td>
                <a href="javascript:;">修改</a>
                <a href="javascript:;">删除</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>

<% include ../common/navigation %>