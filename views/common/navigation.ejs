<nav>
    <ul class="pager">
        <!-- 注意 ++ pageNow 和 pageNow + 1 的区别 -->
        <li class="previous <%= pageNow == 1 ? 'disabled' : '' %>">
            <% if(pageNow == 1) { %>
                <a href="javascript:;"><span aria-hidden="true">&larr;</span> 上一页</a>
            <% } else { %>
                <a href="/admin/classifylist?pageNow=<%= pageNow - 1 %>"><span aria-hidden="true">&larr;</span> 上一页</a>
            <% } %>
        </li>
        <li>一共有 <%= counts %> 条数据，每页显示 <%= limit %> 条数据，一共 <%= pages %> 页，当前第 <%= pageNow %> 页</li>
        <li class="next <%= pageNow == pages ? 'disabled' : '' %>">
            <% if(pageNow == pages) { %>
                <a href="javascript:;">下一页 <span aria-hidden="true">&rarr;</span></a>
            <% } else { %>
                <a href="/admin/classifylist?pageNow=<%= pageNow + 1 %>">下一页 <span aria-hidden="true">&rarr;</span></a>
            <% } %>
        </li>
    </ul>
</nav>